generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Blog {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  seo_title       String
  read_time       String
  seo_description String
  slug            String   @unique
  content         Json
  image           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
